<div class="row centered-form">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title">Registro de Monitor <small>SGMUTP</small></h3>
      </div>

      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class= "row">
          <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.label :Codigo %>
              <%= f.text_field :id_number, autofocus: true, class:"form-control input-sm", :required => true %>
            </div>
          </div>
        </div>

        <div class= "row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <%= f.label :Nombre_completo %>
              <%= f.text_field :full_name, class:"form-control input-sm", :required => true %>
            </div>
          </div>
        </div>

        <div class= "row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class:"form-control input-sm", :required => true %>
            </div>
          </div>

        </div>
        <div class= "row">
          <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.label :Telefono %>
              <%= f.text_field :telephone, class:"form-control input-sm" %>
            </div>
          </div>  
         
        </div>
        <div class= "row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <%= f.label :Dirección %><br />
              <%= f.text_field :address, class:"form-control input-sm" %>
            </div>
          </div>
        </div>     

        <div class= "row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <%= f.label :Contraseña %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> Caracteres Minimos)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class:"form-control input-sm" %>
            </div>
          </div>
        </div>
        <div class= "row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="field">
              <div class="form-group">
                <%= f.label :Confirmacion_de_contraseña %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input-sm" %>
              </div>
            </div>
          <div>                 
        </div>

        <div class= "row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="field">
              <div class="form-group">
                <%= f.label :Firma_de_Estudiante %><br />
                <%= f.file_field :signature, :required => true %>
              </div>
            </div>
          <div>                 
        </div>

        <div class= "row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="actions">
              <%= f.submit "Solicitar Registro", class:"btn btn-info btn-block" %>
              <% end %>
            </div>
          </div>
        </div>        

      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
